
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<style>
  .navbar-brand {
     background-image: url("https://filesforfintech.s3.amazonaws.com/images/officer+piggy+notification.png");
     background-size: cover;
     background-repeat: no-repeat;
     height:50px;
     width:50px;

  }

  .navbar-dark .navbar-brand {
    color: transparent !important;
}

small {
 float: right;
 position: absolute;
 border-radius: 10px;
 padding: 3px;
 bottom: 20px;
 right: 20px;
 color: white;
}


</style>

<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">

  <!-- Dropdown -->

    <a class="nav-link dropdown-toggle navbar-brand" href="#" id="navbardrop" data-toggle="dropdown"></a>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="#">Link 1</a>
      <a class="dropdown-item" href="#">Link 2</a>
      <a class="dropdown-item" href="#">Link 3</a>

    </div>


  <!-- Links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to 'Articles', posts_path, class:'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Mailer', contacts_path, class:'nav-link' %>
    </li>
    <li class="nav-item">
      <a href="../builder/index" class="nav-link" data-ajax="false">Builder</a>
      </li>

      <% if current_user %>


        <li>
          <%= link_to 'Sign out', destroy_user_session_path, class:'nav-link', method: :delete %>
        </li>
      <% else %>
        <li><%= link_to 'Sign up', new_user_registration_path, class:'nav-link' %></li>
        <li>  <%= link_to 'Sign In', new_user_session_path, class:'nav-link' %></li>
        <li><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class:'nav-link' %></li>
      <% end %>

  </ul>

  
  <% if user_signed_in? %>
    <small>Logged as: <%= current_user.email %></small>
      <% if current_user.provider != nil %>
        <small> from: <%= current_user.provider %></small>
      <% end %>
  <% else %>
    <small>You are not logged !</small>
  <% end %>



</nav>
<br>

</body>
